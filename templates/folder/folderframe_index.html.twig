<turbo-frame id="folders" class="row m-2" {{ stimulus_controller('folders') }}>
	{% for folder in folders %}
		<div class="col-lg-3 col-md-4" id="folder_{{ folder.id }}" data-id="{{ folder.id }}" {{ stimulus_target('storage', 'folder') }}>
			<div class="card">
				<div class="card-body">
					<div class="d-flex justify-content-between my-2">
						<input type="checkbox">
						<a href="#"><i class="fa fa-ellipsis-v"></i></a>
					</div>
					<div class="d-flex justify-content-center my-2">
						<a href="#"><i class="fa fa-5x fa-folder text-warning text-center"></i>
							<br>
							<h5><strong>{{ folder.name }}</strong></h5>
						</a>
					</div>
					<div class="d-flex justify-content-between my-2">
						<span class="btn drag-handle text-bg-light"><i class="fa fa-reorder"></i></span>
						<span ><strong class="text-muted">0 Dateien</strong></span>
						<span><strong class="text-muted">0 GB</strong></span>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
</turbo-frame>
